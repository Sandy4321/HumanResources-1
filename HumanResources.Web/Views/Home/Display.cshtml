@using HumanResources.Web.Models
@model EmployeeModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Просмотр</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
</head>
<body>
    <div>
        <h3>Просмотр сотрудника</h3>
            <table>
                <tr>
                    <td>
                        <p>Фамилия:</p>
                    </td>
                    <td>@Html.DisplayFor(model => model.Surname)</td>
                </tr>
                <tr>
                    <td>
                        <p>Имя:</p>
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.Name)
                    </td>
                </tr>
                <tr>
                    <td>
                        <p>Отчество: </p>
                    </td>
                    <td>@Html.DisplayFor(model => model.Patronymic)</td>

                </tr>
                <tr>
                    <td>
                        <p>Город: </p>
                    </td>
                    <td>@Html.DisplayFor(model => model.CityName)</td>
                </tr>
                <tr>
                    <td>
                        <p>Дата старта: </p>
                    </td>
                    <td>@Html.DisplayFor(m => m.StartDate, new { htmlAttributes = new { @class = "datepicker" } })</td>
                </tr>
                <tr>
                    <td>
                        <p>Дата увольнения: </p>
                    </td>
                    <td>@Html.DisplayFor(m => m.EndDate, new { htmlAttributes = new { @class = "datepicker" } })</td>
                </tr>
                <tr>
                    <td>
                        <p>Телефон: </p>
                    </td>
                    <td>@Html.DisplayFor(model => model.Phone)</td>
                </tr>
                <tr>
                    <td>
                        <p>Мобильный телефон: </p>
                    </td>
                    <td>@Html.DisplayFor(model => model.MobilePhone)</td>
                </tr>
                <tr>
                    <td>
                        <p>Адрес: </p>
                    </td>
                    <td>@Html.DisplayFor(model => model.Address)</td>
                </tr>
                <tr>
                    <td>
                        <p>Руководитель: </p>
                    </td>
                    <td>@Html.DisplayFor(model => model.ManagerName)</td>
                </tr>
                <tr>
                    <td>
                        <p>Дата рождения: </p>
                    </td>
                    <td>@Html.DisplayFor(m => m.DateOfBirth, new { htmlAttributes = new { @class = "datepicker" } })</td>
                </tr>
                <tr>
                    <td>
                        <p>Должность: </p>
                    </td>
                    <td>@Html.DisplayFor(model => model.Position)</td>
                </tr>

            </table>
    </div>
    <div>
        <p>@Html.ActionLink("К списку сотрудников", "Index")</p>
    </div>
</body>
</html>
