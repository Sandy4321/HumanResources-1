@using HumanResources.Web.Models
@model EmployeeModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Редактирование</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
</head>
<body>
    <div>
        <h3>Редактировать сотрудника</h3>
        
        <form method="post" action="">
            @Html.HiddenFor(model => model.Id)
            <table>
                <tr>
                    <td>
                        <p><div class="editor-label">@Html.LabelFor(model => model.Surname):</div></p>
                    </td>
                    <td>
                        <div class="editor-field">
                            @Html.EditorFor(model => model.Surname)
                            @Html.ValidationMessageFor(model => model.Surname)
                        </div>
                    </td>
                </tr>
                <tr>
                    <td>
                        <p><div class="editor-label">@Html.LabelFor(model => model.Name):</div></p>
                    </td>
                    <td>
                        <div class="editor-field">
                            @Html.EditorFor(model => model.Name)
                            @Html.ValidationMessageFor(model => model.Name)
                        </div>
                    </td>
                </tr>
                <tr>
                    <td>
                        <p><div class="editor-label">@Html.LabelFor(model => model.Patronymic):</div></p>
                    </td>
                    <td>
                        <div class="editor-field">
                            @Html.EditorFor(model => model.Patronymic)
                            @Html.ValidationMessageFor(model => model.Patronymic)
                        </div>
                    </td>
                </tr>
                <tr>
                    <td>
                        <p><div class="editor-label">@Html.LabelFor(model => model.CityId):</div></p>
                    </td>
                    <td>
                        <div class="editor-field">
                            @Html.DropDownListFor(model => model.CityId, ViewBag.CityList as SelectList)
                            @Html.ValidationMessageFor(model => model.CityId)
                        </div>
                    </td>
                </tr>
                <tr>
                    <td>
                        <p><div class="editor-label">@Html.LabelFor(model => model.StartDate):</div></p>
                    </td>
                    <td>
                        <div class="editor-field">
                            @Html.EditorFor(m => m.StartDate, new { htmlAttributes = new { @class = "datepicker" } })
                            @Html.ValidationMessageFor(model => model.StartDate)
                        </div>
                    </td>
                </tr>
                <tr>
                    <td>
                        <p>Дата увольнения: </p>
                    </td>
                    <td>@Html.EditorFor(m => m.EndDate, new {htmlAttributes = new {@class = "datepicker"}})</td>
                </tr>
                <tr>
                    <td>
                        <p>Телефон: </p>
                    </td>
                    <td>@Html.EditorFor(model => model.Phone)</td>
                </tr>
                <tr>
                    <td>
                        <p>Мобильный телефон: </p>
                    </td>
                    <td>@Html.EditorFor(model => model.MobilePhone)</td>
                </tr>
                <tr>
                    <td>
                        <p><div class="editor-label">@Html.LabelFor(model => model.Address):</div></p>
                    </td>
                    <td>
                        <div class="editor-field">
                            @Html.EditorFor(model => model.Address)
                            @Html.ValidationMessageFor(model => model.Address)
                        </div>
                    </td>
                </tr>
                <tr>
                    <td>
                        <p>Руководитель: </p>
                    </td>
                    <td>@Html.DropDownListFor(model => model.ManagerId, ViewBag.EmployeeList as SelectList)</td>
                </tr>
                <tr>
                    <td>
                        <p>Дата рождения: </p>
                    </td>
                    <td>@Html.EditorFor(m => m.DateOfBirth, new {htmlAttributes = new {@class = "datepicker"}})</td>
                </tr>
                <tr>
                    <td>
                        <p>Должность: </p>
                    </td>
                    <td>@Html.EditorFor(model => model.Position)</td>
                </tr>

                <tr><td colspan="2"><input type="submit" value="Сохранить"/> </td></tr>
            </table>
        </form>
    </div>
    <div>
        <p>@Html.ActionLink("К списку сотрудников", "Index")</p>
    </div>
</body>
</html>
